{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 10,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-release-x64",
      "displayName": "Windows x64 Release",
      "generator": "Visual Studio 17 2022",
      "description": "Build with UCRT64 and vcpkg manifest mode",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-Wall -W4",
        "CMAKE_CXX_FLAGS_RELEASE": "-O3",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/bin/release"
      }
    },
    {
      "name": "windows-debug-x64",
      "displayName": "Windows x64 Debug",
      "generator": "Visual Studio 17 2022",
      "description": "Build with UCRT64 and vcpkg manifest mode",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-Wall -W4",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/bin/debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Windows Release x64",
      "configurePreset": "windows-release-x64"
    },
    {
      "name": "Windows Debug x64",
      "configurePreset": "windows-debug-x64"
    }
  ]
}
